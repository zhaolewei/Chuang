<?xml version="1.0" encoding="utf-8"?>
<com.zlw.view.RippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <!-- 用户信息 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="8dp" >

                <com.zlw.view.CircleImageView
                    android:id="@+id/item_user_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/test_user_photo" />

                <TextView
                    android:id="@+id/item_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/item_user_photo"
                    android:text="悠久之翼"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_user_name"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/item_user_photo"
                    android:text="合伙人, CTO 山西互联网技术团队"
                    android:textColor="#666"
                    android:textSize="8sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="大家看看我们的付费问题回答如何？有市场方面的合作吗？"
                android:textColor="#111"
                android:textSize="12sp" />

            <!-- 图片部分 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingLeft="6dp" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img2" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img3" />
            </LinearLayout>

            <!-- 点赞部分 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:padding="6dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_zan_img"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:background="@drawable/feed_zan_normal"
                        android:clickable="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/item_zan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:text="15"
                        android:textColor="#999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/item_conversation_img"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/tabs_conversation_normal"
                        android:clickable="true"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/item_conversation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:clickable="true"
                        android:drawablePadding="6dp"
                        android:gravity="center_vertical"
                        android:text="4"
                        android:textColor="#999" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/item_share_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/feed_share"
                    android:clickable="true"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</com.zlw.view.RippleLayout>